<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lanou.days">
    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".birth.tool.MyApp"
        android:theme="@style/AppTheme">
        <activity android:name=".opening.OpeningActivity"
                  android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".birth.ModifyBirthDayActivity" />
        <activity android:name=".birth.FriendsActivity" android:launchMode="singleTask"/>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".birth.AddFriendsActivity"
            android:theme="@style/JK.SwipeBack.Transparent.Theme"
            />
        <activity android:name=".enter.LoginActivity"/>
        <activity android:name=".enter.NewLoginActivity"/>

        <activity android:name=".birth.DetailsActivity"/>

        <activity android:name=".note.NoteDetail"/>

        <activity android:name=".news.read.ReadActivity"/>
        <activity android:name=".news.technology.TechnologyActivity"/>



    </application>


</manifest>