<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOpeningBG"
        android:textColor="@color/colorOpeningTV"
        android:text="开心每一天"
        android:textSize="22dp"
        android:id="@+id/btn_share_technology"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/iv_technology_read"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="名称"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:id="@+id/tv_technology_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="内容"
            android:layout_margin="10dp"
            android:id="@+id/tv_technology_body"/>
    </LinearLayout>
</LinearLayout>